post_install() {
  KERNEL_VERSION='2.6.30-ARCH'
  depmod -v $KERNEL_VERSION  > /dev/null 2>&1		 
}

post_upgrade() {
  post_install $1
  rmmod nouveau || echo 'In order to use the new nouneau module, exit Xserver and unload it manually.'
}

post_remove() {
  KERNEL_VERSION='2.6.30-ARCH'
  depmod -v $KERNEL_VERSION	 > /dev/null 2>&1	 
}

