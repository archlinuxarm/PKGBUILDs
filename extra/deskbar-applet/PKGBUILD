# $Id: PKGBUILD 39846 2009-05-21 15:00:09Z jgc $
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=deskbar-applet
pkgver=2.26.2
pkgrel=1
pkgdesc="An all-in-one search bar for the GNOME panel"
arch=(i686 x86_64)
url="http://raphael.slinckx.net/deskbar/"
license=('GPL')
depends=('gnome-desktop>=2.26.1' 'gnome-python-desktop>=2.26.0' 'gnome-panel>=2.26.1' 'libbonoboui>=2.24.1' 'dbus-python>=0.83.0')
makedepends=('evolution-data-server>=2.26.1.1' 'gettext' 'intltool' 'pkgconfig' 'gnome-doc-utils>=0.16.0')
options=('!libtool' '!emptydirs')
groups=('gnome-extra')
install="deskbar-applet.install"
source=(http://ftp.gnome.org/pub/GNOME/sources/deskbar-applet/2.26/${pkgname}-${pkgver}.tar.bz2)
md5sums=('82bca281838b38b3d9c682ab839b7b6b')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  LD_PRELOAD="" ./configure --prefix=/usr --sysconfdir=/etc \
    --localstatedir=/var \
    --disable-scrollkeeper \
    --enable-evolution || return 1

  make || return 1
  make GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR="${pkgdir}" install || return 1

  install -m755 -d "${pkgdir}/usr/share/gconf/schemas"
  gconf-merge-schema "${pkgdir}/usr/share/gconf/schemas/${pkgname}.schemas" --domain deskbar-applet ${pkgdir}/etc/gconf/schemas/*.schemas || return 1
  rm -f ${pkgdir}/etc/gconf/schemas/*.schemas
}
