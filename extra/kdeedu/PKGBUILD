	cd $srcdir/build/step
	make DESTDIR=$pkgdir install
	cd $srcdir/build/doc/step
	make DESTDIR=$pkgdir install
	# FIXME
	rm -f $pkgdir/usr/share/icons/oxygen/22x22/actions/pointer.png
}
