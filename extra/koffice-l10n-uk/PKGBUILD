# $Id: PKGBUILD 45540 2009-07-12 15:10:15Z ronald $
# Maintainer: Ronald van Haren <ronald.archlinux.org>

pkgname=koffice-l10n-uk
pkgver=2.0.1
pkgrel=1
pkgdesc="Ukrainian KOffice translation."
license=('GPL')
arch=('i686' 'x86_64')
url="http://www.koffice.org"
depends=("koffice>=${pkgver}")
source=(http://download.kde.org/stable/koffice-$pkgver/src/koffice-l10n/$pkgname-$pkgver.tar.bz2)
md5sums=('38670ec69ea58ca99283ca563d1480ce')

build() {
  cd ${srcdir}
  install -d build
  cd build
  cmake ../${pkgname}-${pkgver} \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
  make DESTDIR=${pkgdir} install
}
