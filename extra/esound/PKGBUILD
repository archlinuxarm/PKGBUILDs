# Maintainer: Manuel Rotter <rotter.manuel@gmail.com>

pkgname=esound
pkgver=0.2.41
pkgrel=1
pkgdesc="Enlightened Sound Daemon"
arch=('arm')
license=('LGPL')
depends=('audiofile' 'tcp_wrappers' 'alsa-lib>=1.0.18')
url="http://www.tux.org/~ricdude/EsounD.html"
provides=("esd=${pkgver}")
replaces=('esd')
conflicts=('esd')
backup=('etc/esd.conf')
options=('!libtool')
source=(http://ftp.gnome.org/pub/GNOME/sources/${pkgname}/0.2/${pkgname}-${pkgver}.tar.bz2 esd)
md5sums=('8d9aad3d94d15e0d59ba9dc0ea990c6c'
         'a4c76e7c7f75b201ea7ab6fb15b47472')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
              --localstatedir=/var --disable-static \
              --with-audiofile --with-libwrap \
	      --enable-alsa --disable-artstest || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
  install -m755 -d "${pkgdir}/etc/rc.d"
  install -m755 "${srcdir}/esd" "${pkgdir}/etc/rc.d/esd" || return 1
}
