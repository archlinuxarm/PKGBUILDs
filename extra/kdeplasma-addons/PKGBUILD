         'kdeplasma-addons-applets-news'
         'kdeplasma-addons-applets-notes'
         'kdeplasma-addons-applets-nowplaying'
         'kdeplasma-addons-applets-opendesktop'
         'kdeplasma-addons-applets-paste'
         'kdeplasma-addons-applets-pastebin'
