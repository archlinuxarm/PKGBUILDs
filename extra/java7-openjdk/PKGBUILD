noextract=(openjdk.tar.gz
           corba.tar.gz
           jaxp.tar.gz
           jaxws.tar.gz
           jdk.tar.gz
           langtools.tar.gz
           hotspot.tar.gz)

 [ "$CARCH" = "x86_64" ] && _JARCH=amd64
 [ "$CARCH" = "i686" ] && _JARCH=i386
 [ "$CARCH" = "arm" -o "$CARCH" = "armv6h" -o "$CARCH" = "armv7h" ] && _JARCH=arm

