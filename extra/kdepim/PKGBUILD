package_kdepim-kleopatra() {
	pkgdesc='Kleopatra Sign/Encrypt Files'
	depends=('kdepim-libkdepim' 'kdebase-runtime')
	cd $srcdir/build/kleopatra
	make DESTDIR=$pkgdir install
	cd $srcdir/build/doc/kleopatra
