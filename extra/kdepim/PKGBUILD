package_kdepim-ktimetracker() {
	pkgdesc='Personal Time Tracker'
	depends=('kdebase-runtime' 'kdepim-libkdepim' 'kdepim-kresources' 'libxss')
	install='kdepim.install'
	cd $srcdir/build/ktimetracker
