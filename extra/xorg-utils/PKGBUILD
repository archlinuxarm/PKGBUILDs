build() {
  cd ${startdir}/src
  for i in *; do
    if [ -d "${i}" ]; then
      pushd "${i}"
      ./configure --prefix=/usr || return 1
      make || return 1
      make DESTDIR=${startdir}/pkg install || return 1
      popd
    fi
  done
}

