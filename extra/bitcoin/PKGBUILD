pkgname=('bitcoin-daemon' 'bitcoin-qt' 'bitcoin-tx')
pkgver=25.0
pkgrel=2
arch=('x86_64')
url="https://bitcoin.org/en/wallets/desktop/linux/bitcoincore/"
makedepends=('boost' 'libevent' 'qt5-base' 'qt5-tools' 'qrencode' 'miniupnpc' 'zeromq' 'db5.3')
