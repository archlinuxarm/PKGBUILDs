pkgname=xf86-video-glamo-git
_realpkgname=xf86-video-glamo
pkgver=20090827
pkgrel=1
pkgdesc="X.org glamo video driver"
arch=(arm)
url="http://xorg.freedesktop.org/"
provides=("xf86-video-glamo")
depends=()
makedepends=('pkgconfig' 'xorg-server>=1.6.1' 'fontsproto' 'inputproto'\
	     'glproto>=1.4.9' 'xf86driproto' 'dri2proto' 'xorg-util-macros' 'git' 'autoconf')
conflicts=()
options=('!libtool')
license=('GPL')
source=()
md5sums=()

_gitroot="git://git.openmoko.org/git/xf86-video-glamo"
_gitname="master"

build() {
    cd ${srcdir}/

    if [[ -d ${srcdir}/${_gitname} ]] ; then
    	git pull origin
    	msg "The local files are updated..."
    else
      git init
    	git pull ${_gitroot} ${_gitname}
    fi

    msg "GIT checkout done."
    msg "Starting make for: ${pkgname}"

    autoreconf -v --install || return 1  

    ./configure \
            --prefix=/usr || return 1

    make || return 1
    make DESTDIR=${pkgdir} install || return 1
}

