# Maintainer: Judd Vinet <jvinet@zeroflux.org>
# Contributor: Todd Musall <tmusall@comcast.net>

pkgname=at
pkgver=3.1.10.2
pkgrel=1
pkgdesc="AT and batch delayed command scheduling utility and daemon."
arch=('arm')
url="http://www.debian.org"
license=('GPL')
depends=('pam')
makedepends=('ssmtp')
backup=('etc/at.deny')
source=(http://ftp.debian.org/debian/pool/main/a/at/at_$pkgver.tar.gz
		atd)
md5sums=('485688690a0aae53224c4150867da334'
		 '35574e34829e7df07a3269d4ab646a29')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr --mandir=/usr/share/man  \
    --with-jobdir=/var/spool/atd \
    --with-atspool=/var/spool/atd || return 1
  make || return 1
  make IROOT=$pkgdir docdir=/usr/share/doc install || return 1
  install -D -m755 ../atd $pkgdir/etc/rc.d/atd || return 1
}
