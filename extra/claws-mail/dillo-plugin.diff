+	{"whitelist_ab", "FALSE", &dillo_prefs.whitelist_ab, P_BOOL,
+	 NULL, NULL, NULL},
+	{"whitelist_ab_folder", N_("Any"), &dillo_prefs.whitelist_ab_folder, P_STRING,
+	 NULL, NULL, NULL},
