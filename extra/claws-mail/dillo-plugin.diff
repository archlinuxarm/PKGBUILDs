+struct _DilloBrowserPage {
+        PrefsPage page;
+        GtkWidget *local;
+	GtkWidget *whitelist_ab;
+	GtkWidget *whitelist_ab_folder_combo;
+	GtkWidget *whitelist_ab_select_btn;
