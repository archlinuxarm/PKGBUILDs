# $Id: $
# Maintainer: Pierre Schmitz <pierre@archlinux.de>

pkgname=kcoloredit
pkgver=2.0.0
_kdever=4.1.3
pkgrel=2
pkgdesc="This version of KColorEdit makes more easy and fun edit your palettes"
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('GPL')
groups=('kde-extragear')
depends=('kdebase-runtime')
makedepends=('pkgconfig' 'cmake' 'automoc4')
options=('docs')
install='kcoloredit.install'
source=("http://download.kde.org/stable/${_kdever}/src/extragear/${pkgname}-${pkgver}-kde${_kdever}.tar.bz2")
md5sums=('f637b93ad7b6206eefed4eb2b5a862f0')

build() {
	cd $srcdir
	mkdir build
	cd build
	cmake ../${pkgname}-${pkgver}-kde${_kdever} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
	make DESTDIR=$pkgdir install
}
