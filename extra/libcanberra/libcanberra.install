pkgname=libcanberra

post_install() {
  if [ -x usr/sbin/gconfpkg ]; then
    usr/sbin/gconfpkg --install ${pkgname}
  fi
}

pre_upgrade() {
  if [ -f usr/share/gconf/schemas/${pkgname}.schemas ]; then
    pre_remove
  fi
}

post_upgrade() {
  post_install $1
}

pre_remove() {
  if [ -x usr/sbin/gconfpkg ]; then
    usr/sbin/gconfpkg --uninstall ${pkgname}
  fi
}
