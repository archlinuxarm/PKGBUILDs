post_install() {
  update-desktop-database -q
  xdg-icon-resource forceupdate --theme hicolor
  update-mime-database usr/share/mime > /dev/null
}

post_upgrade() {
  post_install $1
}

post_remove() {
  update-desktop-database -q
  xdg-icon-resource forceupdate --theme hicolor
  update-mime-database usr/share/mime > /dev/null
}


