pkgname=netplan
pkgver=1.1.2
pkgrel=2
pkgdesc="Network configuration abstraction renderer"
arch=('x86_64')
url="https://github.com/canonical/netplan"
license=('GPL-3.0-only')
depends=(
  'dbus-python'
  'gcc-libs'
  'glibc'
  'glib2'
  'libyaml'
  'python'
  'python-cffi'
  'python-yaml'
  'python-netifaces'
  'python-rich'
  'iproute2'
  'systemd'
  'systemd-libs'
  'util-linux-libs'
)
makedepends=(
  'bash-completion'
  'cmocka'
  'meson'
  'python-pytest'
  'python-setuptools'
)
checkdepends=(
  'openvswitch'
  'wireless-regdb'
)
provides=(libnetplan.so)
source=(
  "$pkgname-$pkgver.tar.gz::$url/archive/${pkgver}.tar.gz"
  "$pkgname-1.1-disable-tests.patch"
  "$pkgname-0.107-use_lib.patch"
)
