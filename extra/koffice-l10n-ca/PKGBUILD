# $Id: PKGBUILD 45527 2009-07-12 14:41:07Z ronald $
# Maintainer: Ronald van Haren <ronald.archlinux.org>

pkgname=koffice-l10n-ca
pkgver=2.0.1
pkgrel=1
pkgdesc="Catalan KOffice translation."
license=('GPL')
arch=('i686' 'x86_64')
url="http://www.koffice.org"
depends=("koffice>=${pkgver}")
source=(http://download.kde.org/stable/koffice-$pkgver/src/koffice-l10n/$pkgname-$pkgver.tar.bz2)
md5sums=('4a2c2f17efdcdf17343d0ffc65a34311')

build() {
  cd ${srcdir}
  install -d build
  cd build
  cmake ../${pkgname}-${pkgver} \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
  make DESTDIR=${pkgdir} install
}
