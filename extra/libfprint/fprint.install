# arg 1:  the new package version
post_install() {
getent group scanner >/dev/null || usr/sbin/groupadd -g 96 scanner
        /bin/cat <<THEEND
NOTE
----
Add your user to group 'scanner' to use scanner devices.
THEEND
}

# arg 1:  the new package version
# arg 2:  the old package version
post_upgrade() {
  post_install $1
}

op=$1
shift
$op $*
