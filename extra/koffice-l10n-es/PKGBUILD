# $Id: PKGBUILD 45522 2009-07-12 14:11:52Z ronald $
# Maintainer: Ronald van Haren <ronald.archlinux.org>

pkgname=koffice-l10n-es
pkgver=2.0.1
pkgrel=1
pkgdesc="Spanish KOffice translation."
license=('GPL')
arch=('i686' 'x86_64')
url="http://www.koffice.org"
depends=("koffice>=${pkgver}")
source=(http://download.kde.org/stable/koffice-$pkgver/src/koffice-l10n/$pkgname-$pkgver.tar.bz2)
md5sums=('3d372d4c9fdaf3c98867eabc95ae2b8b')

build() {
  cd ${srcdir}
  install -d build
  cd build
  cmake ../${pkgname}-${pkgver} \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
  make DESTDIR=${pkgdir} install
}
