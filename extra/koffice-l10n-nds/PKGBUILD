# $Id: PKGBUILD 45550 2009-07-12 16:23:35Z ronald $
# Maintainer: Ronald van Haren <ronald.archlinux.org>

pkgname=koffice-l10n-nds
pkgver=2.0.1
pkgrel=1
pkgdesc="Low Saxon KOffice translation."
license=('GPL')
arch=('i686' 'x86_64')
url="http://www.koffice.org"
depends=("koffice>=${pkgver}")
source=(http://download.kde.org/stable/koffice-$pkgver/src/koffice-l10n/$pkgname-$pkgver.tar.bz2)
md5sums=('fba20a6aec8f959962e33821d45f900e')

build() {
  cd ${srcdir}
  install -d build
  cd build
  cmake ../${pkgname}-${pkgver} \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
  make DESTDIR=${pkgdir} install
}
