# $Id: $
# Maintainer: Pierre Schmitz <pierre@archlinux.de>

pkgname=kgrab
pkgver=0.1.1
_kdever=4.1.3
pkgrel=2
pkgdesc="Screen Grabbing Program"
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('GPL' 'LGPL' 'FDL')
groups=('kde-extragear')
depends=('kdebase-runtime')
makedepends=('pkgconfig' 'cmake' 'automoc4')
options=('docs')
install='kgrab.install'
source=("http://download.kde.org/stable/${_kdever}/src/extragear/${pkgname}-${pkgver}-kde${_kdever}.tar.bz2")
md5sums=('ebeb8e14551eb6a8db37de1bc4b32831')

build() {
	cd $srcdir
	mkdir build
	cd build
	cmake ../${pkgname}-${pkgver}-kde${_kdever} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
	make DESTDIR=$pkgdir install
}
