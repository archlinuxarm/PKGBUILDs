info_dir=/usr/share/info
info_files=(librep.info) 

post_install() {
  for f in ${info_files[@]}; do
    install-info ${info_dir}/$f ${info_dir}/dir 2> /dev/null
  done
}

post_upgrade() {
  post_install $1
}

pre_remove() {
  for f in ${info_files[@]}; do
    install-info --delete ${info_dir}/$f ${info_dir}/dir 2> /dev/null
  done
}

op=$1
shift
$op $*
