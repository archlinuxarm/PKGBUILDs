pkgname=xf86-input-tslib
pkgver=0.0.5
pkgrel=1
pkgdesc="X.org tslib input driver"
arch=(arm)
license=('custom')
url="http://www.pengutronix.de/software/xf86-input-tslib/"
depends=('tslib')
makedepends=('randrproto' 'inputproto' 'xproto' 'xorg-server>=1.6.0')
options=('!libtool')
groups=('xorg-input-drivers')
source=(${url}/download/${pkgname}-${pkgver}.tar.bz2)
md5sums=('4231b517d216e9f80ba66f13a0f30afd')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  patch -p1 < ${startdir}/xorg-1.6-compatibility.patch
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
  install -d -m755 "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/" || return 1
}
