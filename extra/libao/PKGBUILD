# Maintainer: Manuel Rotter <rotter.manuel@gmail.com>

pkgname=libao
pkgver=0.8.8
pkgrel=1
pkgdesc="Cross-platform audio output library and plugins"
url="http://www.xiph.org/ao"
arch=('arm')
license=('GPL')
depends=('glibc' 'alsa-lib')
makedepends=('esd')
backup=('etc/libao.conf')
options=('!libtool')
source=(http://downloads.xiph.org/releases/ao/${pkgname}-${pkgver}.tar.gz)
md5sums=('b92cba3cbcf1ee9bc221118a85d23dcd')

build() {
  cd ${startdir}/src/${pkgname}-${pkgver}
  ./configure --prefix=/usr --enable-alsa09 --disable-arts
  make || return 1
  make DESTDIR=${startdir}/pkg install

  # Add conf file
  echo "default_driver=alsa" >> $startdir/src/libao.conf
  install -Dm0644 $startdir/src/libao.conf $startdir/pkg/etc/libao.conf
}
