# Maintainer: Radu Andries <admiral0@tuxfamily.org>
pkgname=python-yaml
_pkgname=PyYAML
pkgver=3.08
pkgrel=1
pkgdesc="Python bindings for YAML, using fast libYAML library"
arch=('arm')
url="http://pyyaml.org"
license=('MIT')
depends=('python>=2.3' 'libyaml')
provides=('python-yaml')
conflicts=('python-yaml-py' 'python-yaml-libyaml')
install='python-yaml.install'
source=(http://pyyaml.org/download/pyyaml/PyYAML-$pkgver.tar.gz
        python-yaml.install)

build() {
  cd $srcdir/$_pkgname-$pkgver
  python setup.py install \
    --prefix=/usr \
    --root=$pkgdir \
    || return 1
  install -m644 -D LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}

md5sums=('a4163a2017fa57f448c66815511fa555'
         '19907de10a256ba71b823c47ff10f0de')
