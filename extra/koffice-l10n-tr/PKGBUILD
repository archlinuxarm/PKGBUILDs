# $Id: PKGBUILD 45539 2009-07-12 15:08:09Z ronald $
# Maintainer: Ronald van Haren <ronald.archlinux.org>

pkgname=koffice-l10n-tr
pkgver=2.0.1
pkgrel=1
pkgdesc="Turkish KOffice translation."
license=('GPL')
arch=('i686' 'x86_64')
url="http://www.koffice.org"
depends=("koffice>=${pkgver}")
source=(http://download.kde.org/stable/koffice-$pkgver/src/koffice-l10n/$pkgname-$pkgver.tar.bz2)
md5sums=('c356fbf05a3444921c41fba7909496ae')

build() {
  cd ${srcdir}
  install -d build
  cd build
  cmake ../${pkgname}-${pkgver} \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
  make DESTDIR=${pkgdir} install
}


