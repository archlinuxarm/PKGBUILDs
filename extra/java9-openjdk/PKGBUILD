_majorver=9
_minorver=0
_securityver=4
_updatever=11
pkgbase=java$_majorver-openjdk
pkgver=$_majorver.$_minorver.$_securityver.u$_updatever
_hg_tag="jdk-$_majorver.$_minorver.$_securityver+$_updatever"
_repo_ver=jdk$_java_ver.$_hg_tag
pkgrel=1
_pkg_full_ver=$pkgver-$pkgrel
arch=('x86_64')
