# Contributor: rgwzlfw <s.whalen AT orcon.net.nz>

pkgname=qtmoko
pkgver=20090707
pkgrel=3
pkgdesc="Qtmoko phone suite plus apps"
arch=('arm')
url="http://www.qtmoko.org"
license=('GPL')
depends=('dbus' 'alsa-lib')
source=("http://dashi-x02.karadog.net/~lihouyu/qtmoko/snapbuild/20090707/qtmoko-snapshot-20090707-binonly.tar.gz" "qpe")
md5sums=('aaebb009ec86a688e80e633210c1991c'
         '225f1a9617ef94edb33d7e23255a1b90')
install=${pkgname}.install
build() {
	mkdir -p $pkgdir/opt/qtmoko
	mkdir -p $pkgdir/home/root/
	mkdir -p $pkgdir/etc/rc.d
	install $srcdir/qpe $pkgdir/etc/rc.d/ 
	cp -r $srcdir/* $pkgdir/opt/qtmoko/
}
