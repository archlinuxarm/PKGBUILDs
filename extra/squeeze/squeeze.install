post_install() {
  cat << EOF

NOTE for squeeze:
----
  ==> please install bzip2, gzip, unrar, zip, unzip and lzop
  ==> to use all of squeeze's capabilities
EOF
  update-desktop-database -q
  gtk-update-icon-cache -q -t -f usr/share/icons/hicolor
}

post_upgrade() {
  post_install $1
}

post_remove() {
  update-desktop-database -q
  gtk-update-icon-cache -q -t -f usr/share/icons/hicolor
}
