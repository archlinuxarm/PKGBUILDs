# $Id: PKGBUILD 45597 2009-07-13 01:58:17Z eric $
# Maintainer: Ronald van Haren <ronald.archlinux.org>

pkgname=koffice-l10n-nb
pkgver=2.0.1
pkgrel=1
pkgdesc="Norwegian Bookmal KOffice translation."
license=('GPL')
arch=('i686' 'x86_64')
url="http://www.koffice.org"
depends=("koffice>=${pkgver}")
source=(http://download.kde.org/stable/koffice-$pkgver/src/koffice-l10n/$pkgname-$pkgver.tar.bz2)
md5sums=('ce5c1f4775a5e86b2b79552d6a9b3d26')


build() {
  cd ${srcdir}
  install -d build
  cd build
  cmake ../${pkgname}-${pkgver} \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
  make DESTDIR=${pkgdir} install
}
