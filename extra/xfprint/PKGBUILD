# $Id: PKGBUILD 36341 2009-04-21 04:29:55Z andyrtr $
# Maintainer: Tobias Kieslich <tobias funnychar archlinux.org>

pkgname=xfprint
pkgver=4.6.1
pkgrel=1
pkgdesc="A print dialog and a printer manager for Xfce"
arch=(i686 x86_64)
license=('GPL2')
url="http://www.xfce.org/"
groups=('xfce4')
depends=("libxfcegui4>=$pkgver" "xfconf>=$pkgver" 'libcups>=1.3.10' 'a2ps' 'heimdal>=1.2.1-3'
         'gnutls>=2.6.5' 'hicolor-icon-theme')
makedepends=('pkgconfig' 'intltool')
options=('!libtool')
install=${pkgname}.install
source=(http://www.xfce.org/archive/xfce-${pkgver}/src/${pkgname}-${pkgver}.tar.bz2)
md5sums=('d92fca97a42816085080baf07a99a62e')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc --libexecdir=/usr/lib \
    --localstatedir=/var --disable-static || return 1
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
}
