# Contributor: Daniel Scrivano <daniel@danielscrivano.com>

buildarch=4

pkgname=dkms-8812au
pkgver=v4.2.2.7502.20130517
pkgrel=1
pkgdesc="rtl8812au module for Realtek AC600 and AC1200 (802.11ac) wireless dual-band USB"
arch=('armv7h')
url="http://www.realtek.com.tw/"
license=('GPL')
depends=('dkms' 'linux-headers')
install=${pkgname}.install
options=(!strip)
source=('git+https://github.com/scrivy/rtl8812AU_8821AU_linux' 'dkms.conf')
md5sums=('SKIP'
	'08f6fc4b89b49c29d1154a2334549043')
build() {
  cd ${srcdir}/rtl8812AU_8821AU_linux
}

package() {
  install -dm 755 "${pkgdir}/usr/src"
  cp -dr --no-preserve=ownership "${srcdir}/rtl8812AU_8821AU_linux" "${pkgdir}/usr/src/8812au-${pkgver}"
  install -D -m 644 dkms.conf "${pkgdir}/usr/src/8812au-${pkgver}"
}

