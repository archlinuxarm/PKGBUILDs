buildarch=0

pkgname=firmware-2-aml
_commit=2c3ce4ea7f79749d234bc428ad1f02bbb2025473
pkgver=0.1
pkgrel=1
pkgdesc="Firmware for Amlogic s9xxx"
arch=('aarch64')
url="https://github.com/150balbes/pkg-aml/tree/firmware-aml"
source=("https://github.com/150balbes/pkg-aml/archive/${_commit}.tar.gz")
md5sums=('SKIP')


package() {
  mkdir -p "${pkgdir}/usr/lib/"
  cp -a "$srcdir/pkg-aml-${_commit}/firmware" "${pkgdir}/usr/lib"

}
