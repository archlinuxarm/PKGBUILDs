buildarch=2

pkgname=raspberrypi-firmware
pkgver=20120606
pkgrel=1
pkgdesc="Firmware files for Raspberry Pi"
arch=('any')
url="https://github.com/raspberrypi/firmware"
makedepends=('git')
license=('custom')
options=(!strip)
provides=('libegl' 'libgles')

_gitroot=git://github.com/raspberrypi/firmware.git
_gitname=firmware

build() {
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone --depth 1 "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"

  rm -f "${srcdir}"/firmware/boot/kernel.img
}

package() {
  mkdir -p "${pkgdir}"/etc/ld.so.conf.d/
  echo "/opt/vc/lib/" > "${pkgdir}"/etc/ld.so.conf.d/raspberrypi-firmware.conf
  cp -R "${srcdir}"/firmware/{boot,opt} "${pkgdir}"
}
