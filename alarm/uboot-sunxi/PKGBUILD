prepare() {
  cd "u-boot-$pkgver"
#   for p in "$srcdir/$pkgname-patches/v$pkgver"/*.patch; do
#     msg $(basename "$p")
#     patch -p1 -i "$p"
#   done
  for p in "$srcdir"/00*.patch; do
    msg $(basename "$p")
    patch -p1 -i "$p"
  done
  patch -p1 -i "$srcdir/add_cubieboard2.diff"
  patch -p1 -i "$srcdir/sunxi_default-dtbs.diff"
}

build() {
  cd "u-boot-$pkgver"

  for i in Cubieboard2 Cubietruck; do
    mkdir ../bin_${i}
    make distclean
    make ${i}_config
    make
    mv u-boot-sunxi-with-spl.bin ../bin_${i}
  done
}

package_uboot-cubieboard2() {
  pkgdesc="U-Boot for Cubieboard 2"
  install=${pkgbase}.install
  provides=('uboot-sunxi')
  conflicts=('uboot-sunxi')

  mkdir -p "${pkgdir}"/boot
  cp bin_Cubieboard2/u-boot-sunxi-with-spl.bin "${pkgdir}"/boot

  install -Dm644 extlinux.conf "$pkgdir/boot/extlinux/extlinux.conf"

#   fex2bin cubieboard2.fex "${pkgdir}"/boot/script.bin
#   cp cubieboard2.env "${pkgdir}"/boot/uEnv.txt
}

