options=('!buildflags')
backup=('boot/extlinux/extlinux.conf')
md5sums=('36d4bad687edcafa396fee607e505d4e'
         'f3db1a190980ec119e9f16320bc8f665'
         '41bacd7d5d83ecc39bc6f8147279568c'
