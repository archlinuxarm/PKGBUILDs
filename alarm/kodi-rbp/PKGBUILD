_prefix=/usr

pkgbase=kodi-rbp
pkgname=('kodi-rbp' 'kodi-rbp-eventclients' 'kodi-rbp-tools-texturepacker' 'kodi-rbp-dev')
_codename=Krypton
pkgver=17.4
pkgrel=3
arch=('armv6h' 'armv7h')
url="http://kodi.tv"
license=('GPL2')
makedepends=('afpfs-ng' 'autoconf' 'avahi' 'bluez-libs' 'boost' 'cmake' 'cwiid' 'dcadec'
