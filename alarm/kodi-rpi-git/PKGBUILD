makedepends_aarch64=('java-environment<21')

[[ -n "$_clangbuild" ]] && makedepends+=('clang' 'lld' 'llvm')

_gitname="gs-gbm_master"
_majorver="22.x"
_init_version=1.137
_libdvdcss_version="1.4.3-Next-Nexus-Alpha2-2"
