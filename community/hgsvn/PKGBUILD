pkgname=hgsvn
pkgver=0.1.6
pkgrel=2
pkgdesc='A set of scripts to work locally on Subversion checkouts using Mercurial'
arch=('i686' 'x86_64')
url='http://pypi.python.org/pypi/hgsvn/'
license=('GPL')
depends=('python' 'setuptools')
source=("http://pypi.python.org/packages/source/h/hgsvn/$pkgname-$pkgver.tar.gz")
md5sums=('717f21210fb84e7538d76a95a582a647')

build() {
  cd $startdir/src/$pkgname-$pkgver
  python setup.py install --root=$startdir/pkg || return 1
}
