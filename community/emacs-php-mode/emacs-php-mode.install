### php-mode.install:
post_install () {
cat << EOF
==> Put this in your $HOME/.emacs file to enable php-mode autoloading
==> and autorecognition of "*.php" files:

(autoload 'php-mode "php-mode.el" "Php mode." t)
(setq auto-mode-alist (append '(("/*.\.php[345]?$" . php-mode)) auto-mode-alist))
EOF
}

post_upgrade () {
	post_install $1
}

op=$1
shift
$op $*
