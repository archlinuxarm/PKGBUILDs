pkgname=comix

post_install() {
  usr/sbin/gconfpkg --install ${pkgname}
  echo "update desktop mime database..."
  update-desktop-database -q
}

pre_upgrade() {
  pre_remove $1
}

post_upgrade() {
  post_install $1
}

pre_remove() {
  usr/sbin/gconfpkg --uninstall ${pkgname}
}

post_remove() {
  echo "update desktop mime database..."
  update-desktop-database -q
}
