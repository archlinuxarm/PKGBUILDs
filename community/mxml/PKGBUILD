# $Id: PKGBUILD 82 2009-07-17 19:56:55Z aaron $
# Maintainer: Roman Kyrylych <roman@archlinux.org>
# Contributor: Johannes Sjolund <j.sjolund@gmail.com>

pkgname=mxml
pkgver=2.5
pkgrel=1
pkgdesc="A small XML parsing library "
arch=('i686' 'x86_64')
url="http://www.minixml.org/"
license=('LGPL')
depends=('glibc')
source=(http://ftp.easysw.com/pub/mxml/$pkgver/$pkgname-$pkgver.tar.gz)
md5sums=('f706377fba630b39fa02fd63642b17e5')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DSTROOT=$startdir/pkg install
  chmod -x $startdir/pkg/usr/lib/libmxml.a
}
