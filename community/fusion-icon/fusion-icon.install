pkgname=fusion-icon-git

post_install() {
  cat << EOF
==> Updating icon cache.....
EOF
  gtk-update-icon-cache -q -t -f usr/share/icons/hicolor

}

post_upgrade() {
  post_install
}

post_remove() {
  cat << EOF
==> Updating icon cache.....
EOF
  gtk-update-icon-cache -q -t -f usr/share/icons/hicolor
}

op=$1
shift

$op $*
