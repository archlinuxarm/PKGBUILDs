post_install() {
  echo "-- Go to the http://your-server/dokuwiki/install.php to setup dokuwiki"
  chown -R http:http /srv/http/dokuwiki/data && \
  chown http:http /srv/http/dokuwiki/conf
}

post_upgrade() {
  chown -R http:http /srv/http/dokuwiki/data && \
  chown http:http /srv/http/dokuwiki/conf
}

op=$1
shift
$op $*
