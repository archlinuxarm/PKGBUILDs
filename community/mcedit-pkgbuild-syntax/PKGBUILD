pkgname=mcedit-pkgbuild-syntax
pkgver=6
pkgrel=1
pkgdesc="PKGBUILD syntax highlight for midnight commander editor"
arch=(i686 x86_64)
url="http://www.archlinux.org"
license=('GPL')
depends=(mc)
install=mcedit-pkgbuild-syntax.install
source=(PKGBUILD.syntax)
md5sums=('38f5f5fd769ec92d4738974db896c301')

build() {
  install -D -m0644 $srcdir/PKGBUILD.syntax $pkgdir/usr/share/mc/syntax/PKGBUILD.syntax
}
