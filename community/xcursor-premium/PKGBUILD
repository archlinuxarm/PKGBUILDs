pkgname=xcursor-premium
pkgver=0.3
pkgrel=5
pkgdesc="Premium X Cursor Theme"
arch=('i686' 'x86_64')
url="http://www.kde-look.org/content/show.php?content=14485"
license=("GPL")
source=(http://www.kde-look.org/CONTENT/content-files/14485-Premium-0.3.tar.bz2)
md5sums=('0d7b263d25a093012da2b46c11a62d06')

build() {
  mkdir -p $startdir/pkg/usr/share/icons/{Premium,Premium-left}
  cp -R $startdir/src/Premium-0.3/Premium/{cursors,index.theme} $startdir/pkg/usr/share/icons/Premium
  cp -R $startdir/src/Premium-0.3/Premium-left/{cursors,index.theme} $startdir/pkg/usr/share/icons/Premium-left
}
