build() {
  cd $startdir/src/
  /bin/rm *.gz *.bz2 
  /bin/mkdir -p $startdir/pkg/usr/share/gdm/themes
  /bin/cp -R * $startdir/pkg/usr/share/gdm/themes
  rm $startdir/pkg/usr/share/gdm/themes/*/{INSTALL,README,license.txt,readme,*~,.DS_Store}
  chmod 755 $startdir/pkg/usr/share/gdm/themes/*
  chmod 644 $startdir/pkg/usr/share/gdm/themes/*/*
}
