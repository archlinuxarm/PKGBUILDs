# $Id: PKGBUILD 82 2009-07-17 19:56:55Z aaron $
# Maintainer: Sergej Pupykin <pupykin.s+arch@gmail.com>
# Maintainer: Charles Mauch <cmauch@gmail.com>

pkgname=perl-html-highlight
pkgver=0.20
pkgrel=3
pkgdesc="Perl/CPAN Module HTML::Highlight"
arch=("i686" "x86_64")
url="http://search.cpan.org/dist/HTML-Highlight"
license=("GPL" "PerlArtistic")
source=("http://www.cpan.org/authors/id/T/TR/TRIPIE/HTML-Highlight-0.20.tar.gz")
md5sums=('85cfcff2d5880bdbe126a9a4fdc7b155')

build() {
  cd $startdir/src/HTML-Highlight-0.20
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1 
  make || return 1
  make install DESTDIR=$startdir/pkg || return 1
  find $startdir/pkg -name '.packlist' -delete
  find $startdir/pkg -name '*.pod' -delete
}
