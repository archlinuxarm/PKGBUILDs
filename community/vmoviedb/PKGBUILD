# Contributor: William Rea <sillywilly@gmail.com>

pkgname=vmoviedb
pkgver=0.1.5
pkgrel=3
pkgdesc="A movie collection manager for the Gnome desktop"
arch=('i686' 'x86_64')
url="http://vmoviedb.sourceforge.net"
license=('GPL')
depends=('libgnomeui' 'gconf>=2.18.0.1-4' 'desktop-file-utils')
makedepends=('gnome-doc-utils>=0.11.2')
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('7bfc10573bb890f3924755f2446dd3b6')
install=$pkgname.install
options=('!libtool' '!emptydirs')

build() {
  cd $startdir/src/vmoviedb-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var
  make || return 1
  make -j1 GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR=${startdir}/pkg install || return 1

  mkdir -p ${startdir}/pkg/usr/share/gconf/schemas
  gconf-merge-schema ${startdir}/pkg/usr/share/gconf/schemas/${pkgname}.schemas \
    ${startdir}/pkg/etc/gconf/schemas/*.schemas
  rm -f ${startdir}/pkg/etc/gconf/schemas/*.schemas
}
