# Contributor: Jaroslaw Swierczynski <swiergot@aur.archlinux.org>

pkgname=pdftrans
pkgver=1.2
pkgrel=6
arch=('i686' 'x86_64')
pkgdesc="A utility to add metadata, protect, and encrypt PDF documents"
url="http://maddingue.free.fr/softwares/pdftrans.html.en"
license=('GPL')
depends=('java-runtime' 'itext' 'bcprov')
source=(http://maddingue.free.fr/softwares/download/PDFTrans/$pkgname-$pkgver.zip \
	$pkgname.sh)
md5sums=('1d3677f7101ba5e27492b02843017d26' '1be06ba6669dfd895aadbd308f37715a')

build() {
  cd $startdir/src/$pkgname
  install -m 755 -D $startdir/src/$pkgname.sh $startdir/pkg/usr/bin/$pkgname
  install -m 644 -D classes/PDFTrans.class $startdir/pkg/usr/share/java/$pkgname/PDFTrans.class
  install -m 644 -D doc/pdftrans.1 $startdir/pkg/usr/share/man/man1/pdftrans.1
}
