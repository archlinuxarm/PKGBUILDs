post_install () {
  echo ">> Place 'cdemud' in DAEMONS= in /etc/rc.conf to enable cdemud on system boot."
  echo ">> If the alsa-lib package is installed, cdemud can use the ALSA audio backend"
  echo ">> (edit /etc/conf.d/cdemud to enable this)."
  groupadd cdemu
}
post_remove() {
  groupdel cdemu
}
op=$1
shift
$op $*
