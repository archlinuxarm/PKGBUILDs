# $Id: PKGBUILD 82 2009-07-17 19:56:55Z aaron $
# Maintainer: Roman Kyrylych <roman@archlinux.org>
# Contributor: Roman Kyrylych <roman@archlinux.org>

pkgname=libgtksourceviewmm2
pkgver=1.9.5
pkgrel=1
pkgdesc="A C++ API for gtksourceview2"
arch=('i686' 'x86_64')
url="http://home.gna.org/gtksourceviewmm/"
license=('LGPL')
depends=('gtkmm' 'gtksourceview2')
makedepends=('doxygen')
options=('!libtool' '!emptydirs')
source=(ftp://ftp.gnome.org/pub/gnome/sources/libgtksourceviewmm/1.9/libgtksourceviewmm-$pkgver.tar.bz2 'gcc4.3.patch')
md5sums=('5b907e66e08d913e700135cf3f968ecb'
	'2734d32a4e6c404946190710f08300a7')

build() {
  cd $startdir/src/libgtksourceviewmm-$pkgver

  patch -Np1 -i ../gcc4.3.patch

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}
