pkgname=xcursor-vanilla-dmz-aa
pkgver=0.4
pkgrel=4
pkgdesc="Vanilla DMZ AA cursor theme"
arch=('i686' 'x86_64')
url="http://jimmac.musichall.cz/themes.php?skin=7"
license=("MIT")
source=(http://jimmac.musichall.cz/zip/vanilla-dmz-aa-$pkgver.tar.bz2)
md5sums=('2db5e4eab6678bdf50257fccbdb0edbf')

build() {
  mkdir -p $startdir/pkg/usr/share/icons/Vanilla-DMZ-AA
  cp -R $startdir/src/Vanilla-DMZ-AA/cursors $startdir/pkg/usr/share/icons/Vanilla-DMZ-AA/cursors
  install -Dm644 $startdir/src/Vanilla-DMZ-AA/index.theme $startdir/pkg/usr/share/icons/Vanilla-DMZ-AA/index.theme
  install -Dm644 $startdir/src/Vanilla-DMZ-AA/COPYING $startdir/pkg/usr/share/licenses/xcursor-vanilla-dmz-aa/COPYING
}
