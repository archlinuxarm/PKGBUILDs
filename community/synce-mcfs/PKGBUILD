pkgname=synce-mcfs
pkgver=0.1.1
pkgrel=4
pkgdesc="Midnight Commander VFS for SynCE"
arch=(i686 x86_64)
url="http://synce.sourceforge.net/"
license=("GPL")
depends=('mtools')
install=synce-mcfs.install
source=(http://downloads.sourceforge.net/sourceforge/synce/$pkgname.tar.gz)
md5sums=('156f483f02b356cce73665871c47cb6d')

build() {
  cd $startdir/src/$pkgname
  mkdir -p $startdir/pkg/usr/share/mc/extfs
  cp src/{synce,synceroot} $startdir/pkg/usr/share/mc/extfs
}
