pkgver=0.09
pkgrel=3
pkgdesc="Perl/CPAN Module DateTime::Event::ICal"
arch=("i686" "x86_64")
url="http://search.cpan.org/dist/DateTime-Event-ICal"
license=("GPL" "Artistic")
source=("http://www.cpan.org/authors/id/F/FG/FGLOCK/DateTime-Event-ICal-0.09.tar.gz")
