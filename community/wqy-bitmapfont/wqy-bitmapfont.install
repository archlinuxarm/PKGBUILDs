post_install() {
  echo -n "Updating font cache... "
  mkfontscale /usr/share/fonts/wqy-bitmapfont
  mkfontdir /usr/share/fonts/wqy-bitmapfont
  fc-cache -f /usr/share/fonts/wqy-bitmapfont
  echo "done."
}

post_upgrade() {
  post_install $1
}

post_remove() {
  rm -r /usr/share/fonts/wqy-bitmapfont
}

op=$1
shift

$op $*
