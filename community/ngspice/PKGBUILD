# $Id: PKGBUILD 371 2009-07-27 15:24:57Z abhidg $
# Maintainer: Abhishek Dasgupta <abhidg@gmail.com>
# Contributor: Jason Taylor <jftaylor21@gmail.com>

pkgname=ngspice
pkgver=19
pkgrel=1
pkgdesc="Mixed-level/Mixed-signal circuit simulator based on Spice3f5, Ciber1b1, and Xspice."
url="http://ngspice.sourceforge.net"
license=("BSD")
arch=(i686 x86_64)
depends=('libxaw' 'libedit')
source=(http://downloads.sourceforge.net/$pkgname/ng-spice-rework-$pkgver.tar.gz)

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr --mandir=/usr/share/man --infodir=/usr/share/info --enable-xspice --with-editline=yes
  make || return 1
  make DESTDIR="$pkgdir" install
  install -D -m644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING" || return 1
  rm "$pkgdir/usr/share/info/dir" || return 1
}
md5sums=('52d01ef53332b8a0e58bf4f7ac7f2c42')
