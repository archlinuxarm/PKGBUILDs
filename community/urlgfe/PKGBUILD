# $Id: PKGBUILD 82 2009-07-17 19:56:55Z aaron $
# Maintainer: Roman Kyrylych <roman@archlinux.org>
# Contributor: Leigh Gordon <lwgordon@gmail.com>

pkgname=urlgfe
pkgver=1.0.3
pkgrel=1
pkgdesc="UrlGfe is a GTK2 download manager"
arch=('i686' 'x86_64')
url="http://urlget.sourceforge.net/"
license=('LGPL')
depends=('gtk2' 'curl' 'pcre' 'desktop-file-utils')
install=urlgfe.install
source=(http://downloads.sourceforge.net/urlget/$pkgname-$pkgver.tar.gz)
md5sums=('b620fd50bd9f03b6e0b04375c06371c5')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr
  sed -i 's#@MKINSTALLDIRS@#install-sh -d#' {intl,po}/Makefile
  make || return 1
  make DESTDIR=$pkgdir install || return 1
}
