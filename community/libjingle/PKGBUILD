pkgname=libjingle
pkgver=0.3.11
pkgrel=2
pkgdesc="Google Talk's implementation of Jingle and Jingle-Audio"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/tapioca-voip/"
license=('BSD')
depends=('expat' 'openssl')
options=('!libtool')
source=(http://downloads.sourceforge.net/sourceforge/tapioca-voip/$pkgname-$pkgver.tar.gz)
md5sums=('f9602b2dbca1e13dfe0b15e9188b4442')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
  install -D -m 644 COPYING $startdir/pkg/usr/share/licenses/$pkgname/COPYING
}
