pkgname=perl-cgi
pkgver=3.42
pkgrel=1
pkgdesc="Simple Common Gateway Interface Class"
arch=('i686' 'x86_64')
url="http://search.cpan.org/dist/CGI"
license=('GPL' 'PerlArtistic')
depends=('perl-fcgi>=0.67')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/L/LD/LDS/CGI.pm-$pkgver.tar.gz) 
md5sums=('63eaadf6745bd575f44d0e6887cb6aea')

build() {
  cd  $startdir/src/CGI.pm-$pkgver
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1 
  make || return 1
  make install DESTDIR=$startdir/pkg || return 1
  find $startdir/pkg -name '.packlist' -delete
  find $startdir/pkg -name '*.pod' -delete
}
