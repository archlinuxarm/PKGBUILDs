post_install() {
  gtk-update-icon-cache /usr/share/icons/hicolor && \
  gtk-update-icon-cache /usr/share/icons/Bluecurve && \
  gtk-update-icon-cache /usr/share/icons/crystalsvg
}

post_upgrade() {
  post_install
}

post_remove() {
  post_install
}

op=$1
shift
[ "$(type -t "$op")" = "function" ] && $op "$@"
