post_install() {
  scrollkeeper-update -q -p var/lib/scrollkeeper
  update-mime-database usr/share/mime > /dev/null
  echo "==> If you want to activate simulation, install ngspice or gnucap."
}

post_upgrade() {
  post_install $1
}

post_remove() {
  scrollkeeper-update -q -p var/lib/scrollkeeper
  update-mime-database usr/share/mime > /dev/null
}

op=$1
shift
$op $*
