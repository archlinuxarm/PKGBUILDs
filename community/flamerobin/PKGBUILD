# Maintainer: Douglas Soares de Andrade <dsandrade@gmail.com>

pkgname=flamerobin
pkgver=0.9.2
pkgrel=1
pkgdesc="A tool to handle Firebird database management"
arch=('i686' 'x86_64')
url="http://www.flamerobin.org"
license=('expat')
depends=("wxgtk" "libfbclient")
source=(http://downloads.sourceforge.net/sourceforge/flamerobin/$pkgname-$pkgver-src.tar.gz)

build() {
	cd $startdir/src/$pkgname-$pkgver-src
	./configure --prefix=/usr --with-wx-config=/usr/bin/wx-config
	make || return 1
	make DESTDIR=$startdir/pkg install 
}
md5sums=('bb25fb767c87f135dc4a70d3a7344f06')
