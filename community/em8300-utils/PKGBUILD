# Contributor: Jaroslaw Swierczynski <swiergot@aur.archlinux.org>

pkgname=em8300-utils
pkgver=0.16.4
pkgrel=1
arch=('i686' 'x86_64')
pkgdesc="DXR3 and Hollywood+ driver"
url="http://dxr3.sourceforge.net/"
license=('GPL2')
conflicts=('em8300-cvs')
install=($pkgname.install)
#source=(http://dl.sourceforge.net/sourceforge/dxr3/em8300-$pkgver.tar.gz)
source=(http://dxr3.sourceforge.net/download/em8300-$pkgver-rc1.tar.gz)
md5sums=('7abc675b66dcc6e1c5b273b8e94958fd')

build() {
  cd $startdir/src/em8300-$pkgver-rc1

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1

  install -m 644 -D modules/em8300-udev.rules $startdir/pkg/etc/udev/rules.d/em8300.rules
}
