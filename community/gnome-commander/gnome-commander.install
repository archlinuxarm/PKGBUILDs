pkgname=gnome-commander

post_install() {
  gconfpkg --install "$pkgname"
  update-desktop-database -q
}

pre_upgrade() {
  pre_remove $1
}

post_upgrade() {
  post_install $1
}

pre_remove() {
  gconfpkg --uninstall "$pkgname"
}

post_remove() {
  update-desktop-database -q
}

