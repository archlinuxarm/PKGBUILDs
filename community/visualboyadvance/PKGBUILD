# $Id: PKGBUILD 82 2009-07-17 19:56:55Z aaron $
# Maintainer: Eric Belanger <belanger@astro.umontreal.ca>
# Contributor: Shahar Weiss <sweiss4@gmx.net>

pkgname=visualboyadvance
pkgver=1.7.2
pkgrel=5
pkgdesc="An emulator for Gameboy and Gameboy Advance systems."
arch=('i686' 'x86_64')
url="http://vba.ngemu.com/"
license=("GPL")
depends=('libglademm' 'sdl')
makedepends=('nasm')
source=(http://downloads.sourceforge.net/sourceforge/vba/VisualBoyAdvance-src-$pkgver.tar.gz \
        visualboy-gcc41.patch)
md5sums=('cc02339e3fd8efd9f23121b0a2f81fd8' '139bedc9500277f7787eed14fb71ee99')

build() {
  cd $startdir/src/VisualBoyAdvance-$pkgver
  #fix for x86_64, thanks gentoo
  [ "$CARCH" = "x86_64" ] && patch -Np1 -i ../visualboy-gcc41.patch
  ./configure --prefix=/usr --sysconfdir=/etc --enable-gtk=2.4
  make || return 1
  make DESTDIR=$startdir/pkg install
}
