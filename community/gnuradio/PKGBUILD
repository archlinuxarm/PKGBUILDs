    'libusbx' 'portaudio' 'libuhd' 'zeromq' 'libvolk')
makedepends=('boost' 'cmake' 'python2-lxml' 'python2-cheetah' 'glu' 'swig'
    'pygtk' 'wxpython' 'qwtplot3d' 'qwt5')

