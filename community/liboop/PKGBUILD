# $Id: PKGBUILD 82 2009-07-17 19:56:55Z aaron $
# Contributor: William Rea <sillywilly@gmail.com>
pkgname=liboop
pkgver=1.0
pkgrel=2
pkgdesc="A low-level event loop management library"
arch=('i686' 'x86_64')
url="http://liboop.org"
options=('!libtool')
license=("LGPL")
depends=('glib' 'glib2' 'readline' 'adns')
source=(http://download.ofb.net/liboop/liboop-$pkgver.tar.bz2)
md5sums=('88fc8decf99fd75d2af40e0a005fa0d3')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr --without-tcl
  make || return 1
  make DESTDIR=$pkgdir install
}
