# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>

pkgname=vamps
pkgver=0.99.2
pkgrel=7.1
pkgdesc="Very fast requantisizing tool for backup DVDs"
arch=('i686' 'x86_64')
url="http://vamps.sourceforge.net"
license=('GPL2')
depends=('libdvdread')
source=(http://downloads.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('7d438185a2ae95ebb245472d9fa47d06')

build() {
  cd $srcdir/$pkgname-$pkgver
  make || return 1
  install -D -m755 play_cell/play_cell $pkgdir/usr/bin/play_cell || return 1
  install -m755 $pkgname/$pkgname $pkgdir/usr/bin/ || return 1
}

