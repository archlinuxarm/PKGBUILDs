# Thanks to: Serge Gielkens (Teld) for this bugfix
infodir=/usr/share/info
filelist=(tora.info)

post_install() {
    for file in ${filelist[@]}; do
        install-info $infodir/$file $infodir/dir 2> /dev/null
    done
}

post_upgrade() {
    post_install $1
}

pre_remove() {
    for file in ${filelist[@]}; do
        install-info --delete $infodir/$file $infodir/dir 2> /dev/null
    done
}

