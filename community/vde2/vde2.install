post_install() {
  echo "(required) Start /etc/rc.d/vde"
  echo "(Optional) Merge /usr/share/vde2/iptables.rules.sample to"
  echo "   /etc/iptables/iptables.rules"
  echo "(optional) Example dhcpd config is in /usr/share/vde2/dhpcd.conf.sample"
}

post_upgrade() {
  post_install $1
}

op=$1
shift
$op $*
