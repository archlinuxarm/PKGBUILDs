# Contributor: Geoffroy Carrier <geoffroy.carrier@koon.fr>
pkgname=protege
pkgver=3.3.1
pkgrel=6
pkgdesc="Free, open source ontology editor and knowledge-base framework"
arch=('i686' 'x86_64')
url="http://protege.stanford.edu/"
license=('MPL')
depends=(java-runtime)
source=(http://koon.fr/~gcarrier/$pkgname/$pkgname-$pkgver.tar.bz2)
build() {
  cd "$srcdir/$pkgname-$pkgver"
  install -D "licensing.txt" "$pkgdir/usr/share/licenses/$pkgname/licensing.txt"
  install -D "protege.desktop" "$pkgdir/usr/share/applications/protege.desktop"
  install -D "protege.ico" "$pkgdir/usr/share/pixmaps/protege.ico"
  install -Dm755 "$pkgname.sh" "$pkgdir/usr/bin/$pkgname"
  install -d "$pkgdir/usr/share/java"
  cp -a "$pkgname" "$pkgdir/usr/share/java/$pkgname"
}
md5sums=('963c6e7b918f3aa0690458031a2ea9d5')
