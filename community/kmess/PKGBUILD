pkgname=kmess
pkgver=2.0
pkgrel=1
pkgdesc="KMess is a MSN Messenger client for Linux."
arch=('i686' 'x86_64')
url="http://kmess.sourceforge.net/"
license=('GPL')
depends=('libxss' 'libxslt' 'giflib' 'qca-ossl' 'kdebase-runtime')
makedepends=('automoc4')
source=(http://downloads.sourceforge.net/sourceforge/kmess/kmess-$pkgver.tar.gz)
md5sums=('30a697ffae06e94e7cd4a1bae7adc558')

build() {
  cd $startdir/src/$pkgname-$pkgver
  cmake -DCMAKE_INSTALL_PREFIX=/usr .
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
}

