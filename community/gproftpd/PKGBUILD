pkgname=gproftpd
pkgver=8.3.2
pkgrel=2
pkgdesc="GTK frontend to proftpd"
arch=('i686' 'x86_64')
url="http://mange.dynup.net/linux.html"
license=('GPL')
depends=('proftpd' 'gtk2')
makedepends=('pkgconfig' 'openssl' 'freetype2')
source=(http://mange.dynalias.org/linux/gproftpd/gproftpd-$pkgver.tar.gz)
md5sums=('0b8a06c4972a00b912b0afa3ae6ec539')

build() {
  cd $startdir/src/gproftpd-$pkgver
  sed -i -e "s:/var/www:/home/httpd:g" configure
  ./configure --prefix=/usr --sysconfdir=/etc
  make || return 1

  mkdir -p $startdir/pkg/usr/share/applications && \
  make DESTDIR=$startdir/pkg install || return 1
}
