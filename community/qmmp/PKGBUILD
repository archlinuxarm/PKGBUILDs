#$Id: PKGBUILD 82 2009-07-17 19:56:55Z aaron $
# Maintainer: Jaroslav Lichtblau <dragonlord@aur.archlinux.org>
# Contributor: Jaroslav Lichtblau <dragonlord@aur.archlinux.org>

pkgname=qmmp
pkgver=0.3.0
pkgrel=1
pkgdesc="Qt4 based audio-player"
arch=('i686' 'x86_64')
url="http://qmmp.ylsoftware.com/"
license=('GPL')
depends=('alsa-lib' 'bzip2' 'curl' 'gzip' 'libmad' 'libvorbis' 'libogg'  'qt>=4.3' 'taglib' 'tar' 'unzip')
makedepends=('cmake')
optdepends=('flac: native FLAC support' 
            'jack-audio-connection-kit: JACK sound output'
            'libmpcdec: Musepack support'
            'pulseaudio: PulseAudio output'
            'ffmpeg' 'libsamplerate' 'libmodplug' 'libsndfile' 'wavpack' )
source=(http://qmmp.ylsoftware.com/files/$pkgname-$pkgver.tar.bz2)

md5sums=('ba85e2e288a0e6461f95c1928e8946a4')

build() {
  cd ${srcdir}/$pkgname-$pkgver

  cmake . -DCMAKE_INSTALL_PREFIX=/usr || return 1
  make || return 1
  make DESTDIR=${pkgdir} install
}
