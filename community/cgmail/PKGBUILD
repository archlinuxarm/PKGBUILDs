# $Id: PKGBUILD 82 2009-07-17 19:56:55Z aaron $
# Maintainer: Geoffroy Carrier <geoffroy.carrier@aur.archlinux.org>
# Contributor: Marco Ferragina <marco.ferragina@gmail.com>
pkgname=cgmail
pkgver=0.5
pkgrel=3
pkgdesc="An email checker and notifier applet for gmail"
arch=('i686' 'x86_64')
url="http://cgmail.tuxfamily.org/"
license=('GPL')
depends=('python' 'gnome-python-desktop' 'dbus-python' 'notification-daemon')
makedepends=('setuptools' 'python-distutils-extra')
source=(http://cgmail.tuxfamily.org/files/${pkgname}_$pkgver.tar.gz)
install=('cgmail.install')
build() {
  cd "$srcdir"/$pkgname
  python setup.py install --root="$pkgdir"
  chmod 644 "$pkgdir"/usr/share/cGmail/cgmailservice.desktop
}
md5sums=('6fd5a33084e338cce800540014131c3b')
