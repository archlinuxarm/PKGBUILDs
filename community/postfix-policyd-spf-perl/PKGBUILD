pkgname=postfix-policyd-spf-perl
pkgver=2.007
pkgrel=1
pkgdesc="postfix SPF filter"
arch=(i686 x86_64)
url="http://www.openspf.org"
license=('GPL')
depends=(perl-mail-spf perl-netaddr-ip)
source=(http://www.openspf.org/blobs/postfix-policyd-spf-perl-$pkgver.tar.gz)
md5sums=('69b501012907236fd39975eadf29848a')

build() {
  cd "$startdir/src/$pkgname-$pkgver"

  install -D -m0755 postfix-policyd-spf-perl $startdir/pkg/usr/lib/postfix/postfix-policyd-spf-perl
}
