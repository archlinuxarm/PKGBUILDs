polkit.addRule(function(action, subject) {
  if (action.id.match("org.freedesktop.login1.") && subject.isInGroup("power")) {
    return polkit.Result.YES;
  }
});

polkit.addRule(function(action, subject) {
  if (action.id.indexOf("org.freedesktop.udisks") == 0 && subject.isInGroup("storage")) {
    return polkit.Result.YES;
  }
});
