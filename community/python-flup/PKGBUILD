# $Id: PKGBUILD 82 2009-07-17 19:56:55Z aaron $
# Maintainer: Aaron Schaefer <aaron@elasticdog.com>

pkgname=python-flup
pkgver=1.0.1
pkgrel=2
pkgdesc='A collection of Python WSGI modules'
arch=('i686' 'x86_64')
url='http://trac.saddi.com/flup'
license=('MIT')
depends=('python' 'setuptools')
source=("http://www.saddi.com/software/flup/dist/flup-$pkgver.tar.gz" 'LICENSE')
md5sums=('414181781fb0923f884a38503e8e56da'
         '2b61db5f66aad3b1748085e146603bd1')

build() {
  cd $srcdir/flup-$pkgver
  python setup.py install --root=$pkgdir || return 1
  install -D -m644 ../LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
