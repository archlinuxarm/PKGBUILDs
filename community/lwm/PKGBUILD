# $Id: PKGBUILD 82 2009-07-17 19:56:55Z aaron $
# Maintainer: Jeff Mickey <j@codemac.net>
# Contributor: Ben Mazer <blm@groknil.org>

pkgname=lwm
pkgver=1.2.1
pkgrel=2
pkgdesc="a very light weight window manager"
arch=('i686' 'x86_64')
license=('GPL')
url="http://www.jfc.org.uk/software/lwm.html"
depends=('x-server')
makedepends=('imake')
source=(http://www.jfc.org.uk/files/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('499b2789198e8056f829ab724ad8f541')

build() {
  mkdir -p $startdir/pkg/usr/bin
  cd $startdir/src/$pkgname-$pkgver
  xmkmf
  make || return 1
  strip lwm
  cp lwm $startdir/pkg/usr/bin
  mkdir -p $startdir/pkg/usr/man/man1
  cp lwm.man $startdir/pkg/usr/man/man1/lwm.1
}
