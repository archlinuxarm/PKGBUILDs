# $Id: PKGBUILD 82 2009-07-17 19:56:55Z aaron $
# Maintainer: Sergej Pupykin <pupykin.s+arch@gmail.com>

pkgname=aumix-gtk
pkgver=2.8
pkgrel=4
pkgdesc="A color text mode sound mixer with GPM support"
arch=('i686' 'x86_64')
license=('GPL')
depends=('glibc' 'ncurses' 'gtk2' 'gpm')
conflicts=('aumix')
provides=('aumix')
install=aumix.install
url=(http://www.jpj.net/~trevor/aumix.html)
source=(http://jpj.net/~trevor/aumix/aumix-$pkgver.tar.bz2 \
	aumix.patch \
	aumix.desktop)
md5sums=('dc3fc7209752207c23e7c94ab886b340'
         'a4dae53812a41b7576228c37856c701b'
         'afba8b39b8dd95d8a9d74356023de14a')

build() {
  cd $startdir/src/aumix-$pkgver
  patch -Np1 <../aumix.patch
  ./configure --prefix=/usr --without-gtk1 --without-alsa
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
  mv $startdir/pkg/usr/man $startdir/pkg/usr/share/ && \
  install -D -m0644 $srcdir/aumix.desktop $pkgdir/usr/share/applications/aumix.desktop || return 1
}
