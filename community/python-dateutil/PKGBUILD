pkgname=python-dateutil
pkgver=1.4.1
pkgrel=1
pkgdesc="Provides powerful extensions to the standard datetime module"
arch=('i686' 'x86_64')
license=('PYTHON')
url="http://labix.org/python-dateutil"
depends=('python')
source=(http://labix.org/download/python-dateutil/python-dateutil-$pkgver.tar.gz)
makedepends=('setuptools')

build() {
    cd $startdir/src/python-dateutil-$pkgver
    python setup.py install --root=$startdir/pkg || return 1
    mkdir -p $startdir/pkg/usr/share/licenses/$pkgname || return 1
    cp LICENSE $startdir/pkg/usr/share/licenses/$pkgname/ || return1
}
md5sums=('be7e91c505fd47fa3174e04d0f77991a')
md5sums=('2a5f25ab12fcefcf0b21348f2d47595a')
