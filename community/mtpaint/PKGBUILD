# Maintainer: Roman Kyrylych <roman@archlinux.org>
# Contributor: yosh64 <yosh64.at.gmail.dot.com>

pkgname=mtpaint
pkgver=3.31
pkgrel=2
pkgdesc="A simple GTK2 painting program designed for creating icons and pixel based artwork."
arch=('i686' 'x86_64')
url="http://mtpaint.sourceforge.net"
license=('GPL')
depends=('gtk2' 'giflib' 'openjpeg')
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.bz2)
md5sums=('fbe34eb25f96b6092403115f1f6ab387')

build() {
  cd $srcdir/$pkgname-$pkgver

  ./configure --prefix=$pkgdir/usr man intl gif jpeg tiff
  make || return 1
  make install

  install -D -m644 doc/mtpaint.desktop $pkgdir/usr/share/applications/$pkgname.desktop

  mv $pkgdir/usr/man $pkgdir/usr/share/man || return 1
}
