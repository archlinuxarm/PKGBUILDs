pkgname=perl-io-pager
pkgver=0.06
pkgrel=3
pkgdesc="Perl/CPAN Module IO::Pager"
arch=("i686" "x86_64")
url="http://search.cpan.org/~jpierce/IO-Pager/"
license=("GPL" "Artistic")
source=("http://www.cpan.org/authors/id/J/JP/JPIERCE/IO-Pager-0.06.tgz")
md5sums=('dda54801e176089d9b93e05dc07324a4')

build() {
  cd $startdir/src/IO-Pager-0.06
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1 
  make || return 1
  make install DESTDIR=$startdir/pkg || return 1
  find $startdir/pkg -name '.packlist' -delete
  find $startdir/pkg -name '*.pod' -delete
}
