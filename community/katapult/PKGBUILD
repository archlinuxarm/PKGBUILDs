# Contributor: motyR <moty.rahamim@gmail.com>

pkgname=katapult
pkgver=0.3.2.2
pkgrel=1
arch=('i686' 'x86_64')
pkgdesc="Allows faster access to applications, bookmarks, and other items"
url="http://www.sourceforge.net/projects/katapult/"
license=('GPL')
options=('libtool')
depends=('kdelibs3')
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.bz2)
md5sums=('849b32b884888c64e0ddedbe09a35237')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  . /etc/profile.d/qt3.sh
  . /etc/profile.d/kde3.sh

  ./configure --prefix=/opt/kde --without-arts
  make || return 1
  make DESTDIR="$pkgdir" install
}
