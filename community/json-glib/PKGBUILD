# Contributor: Aman Gupta <arch@tmm1.net>

pkgname=json-glib
pkgver=0.8.0
pkgrel=1
pkgdesc="JSON library built on GLib"
arch=('i686' 'x86_64')
url="http://live.gnome.org/JsonGlib"
license=('GPL')
depends=('glib2')
makedepends=('pkgconfig')
source=(http://ftp.gnome.org/pub/GNOME/sources/${pkgname}/0.8/${pkgname}-${pkgver}.tar.gz)
md5sums=('220dafb2fd804e74d1f5057ba72ae0b6')
options=('!libtool')

build(){
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
}
