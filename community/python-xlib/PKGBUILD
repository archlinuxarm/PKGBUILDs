pkgname=python-xlib
pkgver=0.14
pkgrel=1
pkgdesc="A fully functinal X cliet library for Python programs"
url="http://python-xlib.sourceforge.net/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('python' 'libx11')
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('a038c2f410d8445f3fa8f6dcd45659c5')

build() {
  cd $srcdir/$pkgname-$pkgver
  python setup.py install --root=$pkgdir || return 1
}
