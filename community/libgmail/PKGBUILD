pkgname=libgmail
pkgver=0.1.11
pkgrel=1
pkgdesc="Pure Python binding for accessing Gmail service."
arch=('i686' 'x86_64')
url="http://libgmail.sourceforge.net"
license=('GPL2')
depends=('python' 'python-mechanize')
source=(http://downloads.sourceforge.net/sourceforge/libgmail/$pkgname-$pkgver.tar.gz)
md5sums=('247477ac98b39658fdcdee8d65639e51')

build() {
  cd ${srcdir}/$pkgname-$pkgver

  python setup.py install --root=${pkgdir}
}
