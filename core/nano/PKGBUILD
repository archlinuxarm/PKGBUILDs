pkgname=nano
pkgver=2.0.9
pkgrel=2
pkgdesc="Pico editor clone with enhancements"
arch=('arm')
license=('GPL')
url="http://www.nano-editor.org"
groups=('base')
depends=('ncurses' 'texinfo')
source=(http://www.nano-editor.org/dist/v2.0/nano-${pkgver}.tar.gz)
backup=(opt/etc/nanorc)
md5sums=('2be94dc43fb60fff4626a2401a977220')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/opt --sysconfdir=/opt/etc --enable-color --enable-nanorc \
	--enable-multibuffer --disable-wrapping-as-root
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
  install -DTm644 ${srcdir}/${pkgname}-${pkgver}/doc/nanorc.sample ${pkgdir}/opt/etc/nanorc
  rm -f ${pkgdir}/opt/share/info/dir
}
