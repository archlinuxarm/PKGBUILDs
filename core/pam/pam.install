# arg 1:  the new package version
post_install() {
  # need to run this immediately -- pacman only runs it at the end of
  # all package installs
  /opt/sbin/ldconfig -r .
}

# arg 1:  the new package version
# arg 2:  the old package version
post_upgrade() {
  post_install $1
}

# arg 1:  the old package version
pre_remove() {
  /opt/bin/true
}

op=$1
shift

$op $*
