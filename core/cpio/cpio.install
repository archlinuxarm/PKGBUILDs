infodir=/usr/share/info
filelist=(cpio.info)

post_install() {
 [ -x usr/bin/install-info ] || return 0
 for file in ${filelist[@]}; do
    usr/bin/install-info $infodir/$file $infodir/dir 2> /dev/null
 done
}

post_upgrade() {
  post_install $1
}

pre_remove() {
 [ -x usr/bin/install-info ] || return 0
  for file in ${filelist[@]}; do
    usr/bin/install-info --delete $infodir/$file $infodir/dir 2> /dev/null
  done
}

