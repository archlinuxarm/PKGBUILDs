# Create source using `make' from util/repo-man.

pkgname=repo-man
pkgver=0.2.2
pkgrel=1
pkgdesc="utility for managing our repository"
arch=(arm)
groups=(base-devel)
url="http://hiciu.rootnode.net/arch"
license=(GPL)
depends=(bash)
source=(http://archmobile.org/~harlekin/repo-man/repo-man-$pkgver.tar.bz2)

build() {
  cd "${srcdir}/src"

  make PREFIX="$pkgdir" install || return 1
}

