# Modified by OpenPogo

pkgname=module-init-tools
pkgver=3.5
pkgrel=1
pkgdesc="utilities needed by Linux systems for managing loadable kernel modules"
arch=(arm)
url="http://kerneltools.org"
license=('GPL')
groups=('base')
depends=()
backup=('opt/etc/modprobe.conf')
source=(http://www.kernel.org/pub/linux/utils/kernel/module-init-tools/module-init-tools-$pkgver.tar.bz2
        modprobe.conf)
md5sums=('2b47686247fc9a99bfdb9dd1d1d80e6f'
         '8d629d1614c81b5faaa4b8663b45d51b')

build() {
  cd $startdir/src/$pkgname-$pkgver

  ./configure --prefix=/opt --exec-prefix=/opt/
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
  rm $pkgdir/opt/sbin/generate-modprobe.conf
  install -D -m644 ../modprobe.conf $startdir/pkg/opt/etc/modprobe.conf
}
