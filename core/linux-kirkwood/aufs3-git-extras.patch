+/*
+ * simple list protected by a spinlock
+ */
+
+#ifndef __AUFS_SPL_H__
+#define __AUFS_SPL_H__
+
+#ifdef __KERNEL__
+
+#include <linux/spinlock.h>
+#include <linux/list.h>
+#include <linux/rculist.h>
+
+struct au_splhead {
+	spinlock_t		spin;
+	struct list_head	head;
+};
