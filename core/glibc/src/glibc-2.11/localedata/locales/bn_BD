  (<U0030>,<U09E6>); /
  (<U0031>,<U09E7>); /
  (<U0032>,<U09E8>); /
  (<U0033>,<U09E9>); /
  (<U0034>,<U09EA>); /
  (<U0035>,<U09EB>); /
  (<U0036>,<U09EC>); /
  (<U0037>,<U09ED>); /
  (<U0038>,<U09EE>); /
  (<U0039>,<U09EF>); 

translit_start
include "translit_combining";""
translit_end
END LC_CTYPE

