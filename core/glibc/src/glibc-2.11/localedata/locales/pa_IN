LC_CTYPE
copy	"i18n"

% Punjabi uses the alternate digits U+0A66..U+0A6F
outdigit <U0A66>..<U0A6F>

% This is used in the scanf family of functions to read Punjabi numbers
% using "%Id" and such.
map to_inpunct; /
  (<U0030>,<U0A66>); /
  (<U0031>,<U0A67>); /
  (<U0032>,<U0A68>); /
  (<U0033>,<U0A69>); /
  (<U0034>,<U0A6A>); /
  (<U0035>,<U0A6B>); /
  (<U0036>,<U0A6C>); /
  (<U0037>,<U0A6D>); /
  (<U0038>,<U0A6E>); /
  (<U0039>,<U0A6F>); 

translit_start
include     "translit_combining";""
translit_end
END LC_CTYPE


LC_COLLATE

% Copy the template from ISO/IEC 14651
copy "iso14651_t1"

END LC_COLLATE

