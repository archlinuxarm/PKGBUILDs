# Maintainer: Manuel Rotter <rotter.manuel@gmail.com>

pkgname=run-parts
pkgver=3.1.3
pkgrel=1
pkgdesc='run-parts from the debianutils package'
arch=('arm')
url='http://packages.qa.debian.org/d/debianutils.html'
license=('GPL')
depends=('glibc')
source=(ftp://ftp.prz.rzeszow.pl/pub/gentoo/source/distfiles/debianutils_3.1.3.tar.gz) 
md5sums=('42c759ff41851313bb0b9c419598c04c')

build() {
	cd $srcdir/debianutils-$pkgver
	./configure --prefix=/usr
	make

	install -D -m755 run-parts $pkgdir/usr/bin/run-parts
}
