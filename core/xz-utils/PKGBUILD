# Modified by OpenPogo

pkgname=xz-utils
pkgver=4.999.9beta
pkgrel=1
pkgdesc='utils for managing LZMA and XZ compressed files'
arch=('arm')
url='http://tukaani.org/xz/'
license=('GPL' 'LGPL')
depends=()
provides=('lzma' 'lzma-utils')
replaces=('lzma' 'lzma-utils')
conflicts=('lzma' 'lzma-utils')
options=('!libtool')
source=(http://tukaani.org/xz/$pkgname-$pkgver.tar.gz)
md5sums=('f2073579b6da2fe35d453adee1aaf1b2')

build() {
	cd $srcdir/xz-$pkgver
	./configure --prefix=/opt \
		--disable-static \
		--disable-rpath
	sed -i 's|^hardcode_libdir_flag_spec=.*|hardcode_libdir_flag_spec=""|g' libtool
	sed -i 's|^runpath_var=LD_RUN_PATH|runpath_var=DIE_RPATH_DIE|g' libtool
	make
	make DESTDIR=$pkgdir install
}
