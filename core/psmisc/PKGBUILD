# Maintainer: Eric Belanger <eric@archlinux.org>

pkgname=psmisc
pkgver=22.8
pkgrel=1
pkgdesc="Miscellaneous procfs tools"
arch=('arm')
url="http://psmisc.sourceforge.net/index.html"
license=('GPL')
groups=('base')
depends=('glibc' 'ncurses')
source=(http://downloads.sourceforge.net/psmisc/${pkgname}-${pkgver}.tar.gz
		psmisc.checkregs.fix.patch)
md5sums=('32c493bb484ce605a1cabba1aa084bca'
		 '143116f9c1a6ed14645cf34f76e97239')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  patch -p0 < ../psmisc.checkregs.fix.patch || return 1
  autoreconf || return 1
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
