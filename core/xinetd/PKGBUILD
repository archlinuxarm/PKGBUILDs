# Modified by OpenPogo

pkgname=xinetd
pkgver=2.3.14
pkgrel=5
pkgdesc="xinetd is a secure replacement for inetd"
arch=(arm)
url="http://www.xinetd.org/"
license=('custom')
depends=('tcp_wrappers')
optdepends=('perl: for xconv.pl script')
backup=('opt/etc/xinetd.conf' 'opt/etc/xinetd.d/servers' 'opt/etc/xinetd.d/services')
source=('http://www.xinetd.org/xinetd-$pkgver.tar.gz'
		'xinetd.conf'
		'xinetd'
        'servers'
        'services')
md5sums=('567382d7972613090215c6c54f9b82d9'
		 '3a6862fd5c45217e23c3151e556ccb5a'
         '86be3a85c090c7fb3f7207b7a34e54c9'
         '21f47b4aa20921cfaddddd9f9a407f81'
         '9fa2061dc7dd738c8424251deb86f81e')

build() {
  cd $srcdir/$pkgname-$pkgver
  sed -i "s#${prefix}/man#${prefix}/share/man#" configure
  ./configure --prefix=/opt --with-libwrap
  make || return 1
  make prefix=$pkgdir/opt install
  install -D -m755 ../xinetd $pkgdir/opt/etc/rc.d/xinetd
  install -D -m644 ../xinetd.conf $pkgdir/opt/etc/xinetd.conf
  install -D -m644 ../servers $pkgdir/opt/etc/xinetd.d/servers
  install -D -m644 ../services $pkgdir/opt/etc/xinetd.d/services

  # install license
  install -D -m644 COPYRIGHT $pkgdir/opt/share/licenses/$pkgname/COPYRIGHT
}
