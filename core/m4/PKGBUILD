# Maintainer: Philipp Scholl <pscholl@bawue.de>
# Modified by OpenPogo

pkgname=m4
pkgver=1.4.13
pkgrel=3
pkgdesc="m4 macro processor"
arch=(arm)
license=('GPL')
url="http://www.gnu.org/software/m4"
groups=('base-devel')
depends=()
source=(ftp://ftp.gnu.org/gnu/m4/$pkgname-$pkgver.tar.gz)
md5sums=('e9e36108b5f9855a82ca4a07ebc0fd2e')

build() {
  cd ${srcdir}/$pkgname-$pkgver
  ./configure --prefix=/opt
  make || return 1
  make prefix=${pkgdir}/opt install || return 1

  rm -rf "${pkgdir}/opt/share/info"
}
