# Maintainer: Manuel Rotter <rotter.manuel@gmail.com> 

pkgname=attr-native
pkgver=2.4.44
pkgrel=1
pkgdesc="Extended attribute support library for ACL support"
arch=(i686 x86_64)
group=('crossdev')
license=('LGPL')
url="http://oss.sgi.com/projects/xfs/"
depends=('glibc-native' "attr==$pkgver")

_LIBDIR=/usr/lib/$CARCH

build() {
  mkdir -p $pkgdir$_LIBDIR
  #there is a libattr.so in /lib and /usr/lib, so we fix it
  cp -d --preserve=all `pacman -Ql attr | grep -o /.*so.*$|sed '1d'` $pkgdir$_LIBDIR
}
