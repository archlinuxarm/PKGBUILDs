# Maintainer: Alexander Foremny <alexanderforemny@gmail.com>

pkgname=gmp-native
pkgver=5.0.1
pkgrel=1
pkgdesc="A free library for arbitrary precision arithmetic"
arch=('i686' 'x86_64')
license=('LGPL3')
source=(ftp://ftp.gnu.org/gnu/gmp/gmp-${pkgver}.tar.bz2)
url="http://gmplib.org/"
depends=('gcc-libs-native')
makedepends=("gmp==$pkgver")
md5sums=('6bac6df75c192a13419dfd71d19240a7')

_LIBDIR=/usr/lib/$CARCH

build() {
  mkdir -p $pkgdir$_LIBDIR
  pacman -Ql gmp | grep -o '/usr/lib/libgmp.*' | while read fn; do
    cp -d --preserve=all $fn $pkgdir$_LIBDIR
  done
}

# vim: set ft=sh ts=2 sw=2 et:
