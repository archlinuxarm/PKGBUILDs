# Maintainer: Manuel Rotter <rotter.manuel@gmail.com>

pkgname=gcc-libs-native
pkgver=4.4.3
pkgrel=1
pkgdesc="Runtime libraries shipped by GCC for C and C++ languages"
arch=('i686' 'x86_64')
license=('GPL' 'LGPL')
url="http://gcc.gnu.org"
depends=('glibc-native>=2.8-5')
makedepends=("gcc-libs==$pkgver")

_LIBDIR=/usr/lib/$CARCH

build() {
  mkdir -p $pkgdir$_LIBDIR
  for i in `pacman -Ql gcc-libs | grep -o '/.*lib[^/].*'`; do
    cp -a $i $pkgdir$_LIBDIR
  done
}
