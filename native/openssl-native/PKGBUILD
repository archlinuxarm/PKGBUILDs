# Maintainer: Manuel Rotter <rotter.manuel@gmail.com> 

pkgname=openssl-native
pkgver=0.9.8k
pkgrel=1
pkgdesc='The Open Source toolkit for Secure Sockets Layer and Transport Layer Security'
arch=(i686 x86_64)
group=('crossdev')
license=('LGPL')
url='http://www.openssl.org'
depends=('zlib-native' "openssl=$pkgver")

_LIBDIR=/usr/lib/$CARCH

build() {
  mkdir -p $pkgdir$_LIBDIR
  #some libs are double, delete them!
  cp -d --preserve=all `pacman -Ql openssl | grep  -o /.*so.*$ | sed '8d'` $pkgdir$_LIBDIR
}
