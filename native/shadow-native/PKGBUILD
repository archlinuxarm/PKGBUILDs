# Maintainer: Alexander Foremny <alexanderforemny@gmail.com>

pkgname=shadow-native
pkgver=4.1.4.2
pkgrel=1
pkgdesc='Shadow password file utilities'
arch=('i686' 'x86_64')
url='http://pkg-shadow.alioth.debian.org/'
license=('custom')
depends=(glibc-native)
makedepends=("shadow==$pkgver")

_LIBDIR=/usr/lib/$CARCH

build() {
  mkdir -p $pkgdir$_LIBDIR
  for i in `pacman -Ql shadow | grep -o '/.*lib[^/].*'`; do
    cp -d --preserve=all $i $pkgdir$_LIBDIR
  done
}

# vim: set ft=sh ts=2 sw=2 et:
