# Maintainer: Manuel Rotter <rotter.manuel@gmail.com> 

pkgname=acl-native
pkgver=2.2.49
pkgrel=1
pkgdesc="Library for filesystem ACL support"
arch=(i686 x86_64)
group=('crossdev')
license=('LGPL')
url="http://oss.sgi.com/projects/xfs/"
depends=('attr-native' "acl==$pkgver")

_LIBDIR=/usr/lib/$CARCH

build() {
  mkdir -p $pkgdir$_LIBDIR
  #there is a libacl.so in /lib and /usr/lib, so we fix it
  cp -d --preserve=all `pacman -Ql acl | grep -o /.*so.*$ | sed '1d'` $pkgdir$_LIBDIR
}
