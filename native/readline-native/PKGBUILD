# Maintainer: Alexander Foremny <alexanderforemny@gmail.com>

pkgname=readline-native
pkgver=6.1.002
pkgrel=2
pkgdesc="GNU readline library"
arch=('i686' 'x86_64')
url="http://tiswww.case.edu/php/chet/readline/rltop.html"
license=('GPL')
depends=('glibc-native' 'ncurses-native')
makedepends=("readline==$pkgver")

_LIBDIR=/usr/lib/$CARCH

build() {
  mkdir -p $pkgdir$_LIBDIR

  pacman -Ql readline | grep -o '\(/usr\)\?/lib/.\+' | while read fn; do
    cp -d --preserve=all $fn $pkgdir$_LIBDIR
  done
}

# vim: set ft=sh ts=2 sw=2 et:
