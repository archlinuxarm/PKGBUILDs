# Maintainer: Alexander Foremny <alexanderforemny@gmail.com>

pkgname=cracklib-native
pkgver=2.8.16
pkgrel=1
pkgdesc='Password Checking Library'
arch=(i686 x86_64)
license=(GPL)
url='http://sourceforge.net/projects/cracklib'
depends=(glibc-native zlib-native)
makedepends=("cracklib==$pkgver")

_LIBDIR=/usr/lib/$CARCH

build() {
  mkdir -p $pkgdir$_LIBDIR
  for i in `pacman -Ql cracklib | grep -o '/.*lib[^/].*'`; do
    cp -d --preserve=all $i $pkgdir$_LIBDIR
  done
}

