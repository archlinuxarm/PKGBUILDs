# Maintainer: Alexander Foremny <alexanderforemny@gmail.com>

pkgname=ncurses-native
pkgver=5.7
pkgrel=2
pkgdesc="System V Release 4.0 curses emulation library (libraries only)"
arch=('i686' 'x86_64')
url="http://www.gnu.org/software/ncurses/"
license=('MIT')
depends=('glibc-native')
makedepends=("ncurses==$pkgver")

_LIBDIR=/usr/lib/$CARCH

build() {
  mkdir -p $pkgdir$_LIBDIR
  pacman -Ql ncurses | grep -o '\(/usr\)\?/lib/.\+' | while read fn; do
    cp -d --preserve=all $fn $pkgdir$_LIBDIR
  done
}

# vim: set ft=sh ts=2 sw=2 et:
