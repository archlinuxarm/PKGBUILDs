# Maintainer: Alexander Foremny <alexanderforemny@gmail.com>

pkgname=gdbm-native
pkgver=1.8.3
pkgrel=1
pkgdesc="GNU database library"
url="http://www.gnu.org/software/gdbm/gdbm.html"
license=('GPL')
arch=(i686 x86_64)
depends=('glibc-native')
makedepends=("gdbm==$pkgver")

_LIBDIR=/usr/lib/$CARCH

build() {
  mkdir -p $pkgdir$_LIBDIR
  pacman -Ql gdbm | grep -o '\(/usr\)\?/lib/.\+' | while read fn; do
    cp -d --preserve=all $fn "$pkgdir$_LIBDIR"
  done
}

# vim: set ft=sh ts=2 sw=2 et:
