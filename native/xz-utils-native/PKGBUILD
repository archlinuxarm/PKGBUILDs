# Maintainer: Manuel Rotter <rotter.manuel@gmail.com> 

pkgname=xz-utils-native
pkgver=4.999.8beta
pkgrel=1
pkgdesc="utils for managing LZMA and XZ compressed files"
arch=(i686 x86_64)
group=('crossdev')
license=('LGPL')
url='http://tukaani.org/xz/'
depends=('bash-native' "xz-utils=$pkgver")

_LIBDIR=/usr/lib/$CARCH

build() {
  mkdir -p $pkgdir$_LIBDIR
  cp -d --preserve=all `pacman -Ql xz-utils | grep -o /.*so.*$` $pkgdir$_LIBDIR
}
