# Maintainer: Manuel Rotter <rotter.manuel@gmail.com> 

pkgname=bzip2-native
pkgver=1.0.5
pkgrel=1
pkgdesc="A high-quality data compression program"
arch=(i686 x86_64)
group=('crossdev')
license=('LGPL')
url="http://sources.redhat.com/bzip2"
depends=('glibc-native' "bzip2==$pkgver")

_LIBDIR=/usr/lib/$CARCH

build() {
  mkdir -p $pkgdir$_LIBDIR
  cp -d --preserve=all `pacman -Ql bzip2 | grep -o /.*so.*$ | sed '1d'` $pkgdir$_LIBDIR
}
