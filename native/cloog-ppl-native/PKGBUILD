# Maintainer: Alexander Foremny <alexanderforemny@gmail.com>

pkgname=cloog-ppl-native
pkgver=0.15.9
pkgrel=1
pkgdesc="Library that generates loops for scanning polyhedra"
arch=('i686' 'x86_64')
url="http://www.cloog.org/"
license=('GPL')
depends=('ppl-native>=0.10.2')
makedepends=("cloog-ppl==$pkgver")

_LIBDIR=/usr/lib/$CARCH

build() {
  mkdir -p $pkgdir$_LIBDIR
  pacman -Ql cloog-ppl | grep -o '/usr/lib/.\+' | while read fn; do
    cp -d --preserve=all $fn "$pkgdir$_LIBDIR"
  done
}
