pkgname=uboot-mkimage-native
pkgver=0.4
pkgrel=2
pkgdesc="mkimage binary for making uboot kernel images"
arch=('i686' 'x86_64')
license=('GPL' 'LGPL')
source=(http://ftp.de.debian.org/debian/pool/main/u/uboot-mkimage/uboot-mkimage_0.4.tar.gz)
build() {
  cd $srcdir/uboot-mkimage

  sed 's/\-o mkimage \*\.o/& ${LDFLAGS}/' -i Makefile
  make LDFLAGS="-Wl,-dynamic-linker,/usr/lib/$CARCH/ld-linux.so.2" || return 1
  
  install -Dm755 mkimage $pkgdir/usr/arm-softfloat-linux-gnueabi/bin/mkimage
}
