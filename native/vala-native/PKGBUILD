# Contributor: Andries Radu <rda1988 AT gmail.com>

pkgname=vala-native
pkgver=0.7.7
pkgrel=1
pkgdesc="A programming language that aims to bring modern programming language features to GNOME developers without imposing any additional runtime requirements."
arch=('i686' 'x86_64')
url="http://live.gnome.org/Vala"
license=('GPL')
source=(http://download.gnome.org/sources/vala/0.7/vala-0.7.7.tar.bz2)
depends=('glib2-native' 'vala')
md5sums=('a102d582b2ac75b6bcdc5785683263fc')
build() {
	cd $srcdir/vala-${pkgver}
	./configure --prefix=/usr/arm-softfloat-linux-gnueabi
        make LDFLAGS="-Wl,-dynamic-linker,/usr/lib/$CARCH/ld-linux.so.2" || return 1
	make DESTDIR=$pkgdir install || return 1
}
md5sums=('7d11fcddb2bd30b9ecbdacfaa20f2769')
