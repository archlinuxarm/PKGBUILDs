# Maintainer: Alexander Foremny <alexanderforemny@gmail.com>

pkgname=zlib-native
pkgver=1.2.5
pkgrel=2
pkgdesc="A compression/decompression Library"
arch=('x86_64' 'i686')
group=('crossdev')
license=('custom:zlib')
url="http://www.zlib.net/"
depends=('glibc-native' "zlib==$pkgver")
makedepends=("zlib==$pkgver")

_LIBDIR=/usr/lib/$CARCH

build() {
  mkdir -p $pkgdir$_LIBDIR
  cp -d --preserve=all `pacman -Ql zlib | grep -o /.*so.*$` $pkgdir$_LIBDIR
}

# vim: set ft=sh ts=2 sw=2 et:
